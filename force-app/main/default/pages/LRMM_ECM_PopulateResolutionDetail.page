    <c:LRMM_PopulateResolutionComponent currentRecordId="{!Escalated_Contested_Matters__c.Id}" 
                                        sobjectType="Escalated_Contested_Matters__c" 
                                        parentId="{!Escalated_Contested_Matters__c.ECM_Consumer_Account_Detail_Name__c}"/>
-->
</apex:page>